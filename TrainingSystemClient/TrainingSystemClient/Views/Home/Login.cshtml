@model TrainingSystemClient.Models.Admin
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Home">
            <div class="form-group">
                <label asp-for="EmailId" class="control-label">Email</label>
                <input asp-for="EmailId" class="form-control" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="login" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <label>@Html.Raw(ViewBag.Message)</label>
            <label>@Html.Raw(ViewBag.User)</label>
        </form>
    </div>
</div>
